<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal"
    android:layout_gravity="center">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/filter_item_checkBox"
        android:checked="false"
        android:buttonTint="@color/colorSecondary"
        android:layout_marginEnd="5dp"
        android:layout_alignBaseline="@+id/filter_item_title"
        android:layout_alignBottom="@+id/filter_item_title"
        android:onClick="onFilterCheckboxClicked"/>

    <ImageView
        android:id="@+id/filter_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/filter_item_checkBox"
        android:contentDescription="@string/hero_item_icon"
        android:layout_gravity="center"
        android:src="@drawable/zod_icon_aquarius" />

    <TextView
        android:id="@+id/filter_item_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/filter_item_icon"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@color/colorText" />


</LinearLayout>