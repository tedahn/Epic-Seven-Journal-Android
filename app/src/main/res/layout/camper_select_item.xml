<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_gravity="center">

  <LinearLayout
      android:id="@+id/camper_select_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:background="@drawable/camper_select_item_colors"
      android:padding="5dp"
      android:orientation="vertical">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:id="@+id/camper_select_item_image"
        android:layout_gravity="center_horizontal"
        android:foreground="@drawable/layout_circle_border_element"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/camper_select_item_name"
        android:text="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:textAlignment="center"
        tools:text="@tools:sample/lorem[3]" />
  </LinearLayout>
</android.support.v7.widget.CardView>