<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_main_portrait"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <android.support.v7.widget.SearchView
                android:id="@+id/camper_select_search"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:iconifiedByDefault="true"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="3dp">
            <ImageView
                android:id="@+id/camper_list_preview_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:layout_margin="2dp"
                android:foreground="@drawable/layout_circle_border"
                tools:src="@tools:sample/avatars"/>
            <ImageView
                android:id="@+id/camper_list_preview_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:foreground="@drawable/layout_circle_border"
                tools:src="@tools:sample/avatars"/>
            <ImageView
                android:id="@+id/camper_list_preview_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:foreground="@drawable/layout_circle_border"
                tools:src="@tools:sample/avatars"/>
            <ImageView
                android:id="@+id/camper_list_preview_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:foreground="@drawable/layout_circle_border"
                tools:src="@tools:sample/avatars"/>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/camper_select_reset_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/colorSecondaryDark"
                android:layout_margin="3dp"
                android:layout_weight="1">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:contentDescription="Reset"
                        android:src="@drawable/ic_refresh_black_24dp"
                        android:gravity="center"
                        />
                </FrameLayout>
            </android.support.v7.widget.CardView>

                />
            <Button
                android:layout_weight="2"
                android:id="@+id/camper_select_ok_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorSecondary"
                android:layout_margin="5dp"
                android:text="Check"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/camper_select_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:itemCount="5"
        tools:listitem="@layout/camper_select_item"
        tools:srcCompat="@layout/camper_select_item"
        >

    </android.support.v7.widget.RecyclerView>
</LinearLayout>