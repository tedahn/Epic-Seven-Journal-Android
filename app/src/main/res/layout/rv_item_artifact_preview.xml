<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginStart="50dp">

                <ImageView
                    android:id="@+id/rv_item_artifact_preview_small"
                    android:layout_width="260dp"
                    android:layout_height="94dp"
                    android:layout_marginTop="10dp"
                    tools:src="@drawable/arti_small_ex" />

                <ImageView
                    android:id="@+id/rv_item_artifact_preview_small_frame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:src="@drawable/arti_frame_small" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/rv_item_artifact_preview_icon"
                android:layout_width="110dp"
                android:layout_height="125dp"
                tools:src="@drawable/arti_icon_ex"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/rv_item_artifact_preview_class"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="23dp"
            android:layout_marginStart="125dp"
            tools:src="@drawable/cm_icon_role_warrior" />

        <TextView
            android:id="@+id/rv_item_artifact_preview_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="53dp"
            android:layout_marginStart="123dp"
            android:textColor="@color/colorWhite"
            android:shadowColor="@android:color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="100dp"
            android:layout_marginStart="-20dp"
            android:layout_marginEnd="180dp">
            <RatingBar
                android:id="@+id/rv_item_artifact_preview_rarity"
                style="@style/EpicSevenRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:isIndicator="true"
                android:layout_gravity="center"
                android:numStars="5"
                android:rating="5"
                android:scaleX="0.8"
                android:scaleY="0.8" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>